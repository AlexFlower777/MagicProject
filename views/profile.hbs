<div class="container">
  <a
    id="cart"
    style="width:150px"
    class="container btn btn-danger nav-link text-white"
    type="button"
    href="/users/profile/{{userId}}/new"
  >Create new card</a>
</div>

<div class="container d-flex flex-wrap mt-5">
  <h2>Мои карты</h2>

</div>
<div id="profileContainer" class="container mt-5">
  {{#each allCards}}

    <div data-id={{id}} class="card">
      <img src="{{image}}" class="card-img-top" alt="карта на продажу" />
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">Состояние: {{"Сondition.condition"}}</p>
        <p class="card-text">Цена: {{price}} ₽</p>
        <a
          data-delete="delete"
          data-id="{{id}}"
          class="btn btn-secondary"
        >Delete</a>

      </div>
    </div>
  {{/each}}
</div>
